<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="@color/items_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/text_title_fragment_addTask"
        android:id="@+id/title_fragment_Task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Task"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_task_fragment_descriptiontitle"
        style="@style/text_date_fragment_addTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="Description:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_fragment_Task"
        />

    <TextView
        style="@style/text_description_fragment"
        android:id="@+id/text_task_fragment_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        app:boxBackgroundColor="@color/items_background"
        android:gravity="start"
        android:minLines="6"
        android:maxLines="6"
        android:text="None"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_task_fragment_descriptiontitle"
        />

